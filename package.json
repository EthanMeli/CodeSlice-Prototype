{
  "name": "codeslice",
  "displayName": "CodeSlice",
  "description": "CodeSlice VSCode Extension",
  "version": "0.0.1",
  "publisher": "CodeSlice",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:codeSlice.files",
    "onView:codeSlice.tests",
    "onView:codeSlice.docs",
    "onView:codeSlice.sidebar",
    "onCommand:codeSlice.slice"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeSlice",
          "title": "CodeSlice",
          "icon": "media/code.svg"
        }
      ]
    },
    "views": {
      "codeSlice": [
        {
          "id": "codeSlice.files",
          "name": "Files"
        },
        {
          "id": "codeSlice.tests",
          "name": "Tests"
        },
        {
          "id": "codeSlice.docs",
          "name": "Documentation"
        },
        {
          "id": "codeSlice.sidebar",
          "name": "Slice",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "codeSlice.slice",
        "title": "CodeSlice: Slice Code"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
